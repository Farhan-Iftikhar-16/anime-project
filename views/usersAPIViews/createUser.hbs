
<div class="container d-flex justify-content-center">
  <div class="content_block_user_create">
    <div class="row">
      <div class="col-12">
        <h5 class="text-start text-uppercase">Sign up</h5><hr style="color: var(--color_3);  opacity:0.8">
      </div>
    </div>
    <form method="post" action="/create-user" enctype="multipart/form-data">
      <div class="row mb-3">
        <div class="col-12">
          <label class="form-label">Email</label>
          <input class="form-control" name="user_email" type="email" maxlength="100" required>
        </div>
      </div>
      <div class="row mb-3">
        <div class="col-12">
          <label class="form-label">Username</label>
          <input class="form-control" name="user_name" maxlength="45" required>
        </div>
      </div>
      <div class="row mb-3">
        <div class="col-12">
          <label class="form-label">Password</label>
          <input class="form-control" type="password" name="user_password" maxlength="20" required>
        </div>
      </div>
      <div class="row mb-3">
        <div class="col-12">
          <label class="form-label">Avatar</label>
          <input class="form-control" name="userAvatar" type="file">
        </div>
      </div>
        <div class="row">
          <button class="btn create_user_btn" type="submit">Create account</button>
        </div>
    </form>
  </div>
</div>
